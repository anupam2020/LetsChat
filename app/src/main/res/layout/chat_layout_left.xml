<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15sp"
        android:id="@+id/imgTick"
        android:src="@drawable/single_tick"
        android:layout_below="@id/leftLinear"
        android:layout_marginTop="-15dp"
        android:visibility="gone"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/chat_bg_left"
        android:padding="5dp"
        android:id="@+id/leftLinear"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10sp">

        <TextView
            android:id="@+id/showMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hi where are you?"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="start"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgMsg"
                android:visibility="gone"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTime"
            android:text="Jul 07, 2021 - 09:04PM"
            android:textColor="#8F8F8F"
            android:textSize="10sp"
            android:padding="5dp"
            android:layout_gravity="start"/>

    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/leftLinear"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/favChat"
        android:visibility="gone"/>

</RelativeLayout>