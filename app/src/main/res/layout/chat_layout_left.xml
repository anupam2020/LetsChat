<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="15dp"
        android:layout_height="15sp"
        android:id="@+id/imgTick"
        android:src="@drawable/single_tick"
        android:layout_below="@id/chatLinear"
        android:layout_marginTop="-15dp"
        android:visibility="gone"
        android:layout_marginLeft="5dp" />

    <LinearLayout
        android:id="@+id/chatLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/chat_bg_left"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/showMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:padding="5dp"
            android:text="Hi where are you?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:padding="5dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imgMsg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_below="@id/chatLinear"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="5dp"
        android:text="Jul 07, 2021 - 09:04PM"
        android:textColor="@color/light_grey_left"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/favChat"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5sp" />

</RelativeLayout>