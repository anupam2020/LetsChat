<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15sp"
        android:id="@+id/imgTick"
        android:src="@drawable/single_tick"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rightLinear"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:id="@+id/rightLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_bg_right"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10sp"
        android:layout_toLeftOf="@id/imgTick"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/showMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            android:text="Hi!"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="5dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgMsg"
                android:visibility="gone"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="5dp"
            android:text="Jul 07, 2021 - 09:04PM"
            android:textColor="#9A9A9A"
            android:textSize="10sp" />

    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/rightLinear"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="30dp"
        android:id="@+id/favChat"
        android:visibility="gone"/>

</RelativeLayout>