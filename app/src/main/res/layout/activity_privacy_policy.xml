<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyPolicy"
    android:id="@+id/privacyRelative">

    <RelativeLayout
        android:id="@+id/privacyRelativeTop"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/black_box_round">

        <ImageView
            android:id="@+id/privacyBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/privacyBack"
            android:text="Privacy Policy"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/privacyWebView"
        android:layout_below="@id/privacyRelativeTop"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="15dp"/>

</RelativeLayout>